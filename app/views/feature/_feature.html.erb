<div class="mdl-cell mdl-cell--4-col ">

    <div class="mdl-card">

        <%if feature.product_image.present?%>
        <div class="mdl-card__media" style="background-color:#ffff !important;">
            <img src="<%=url_for(feature.product_image) %>" height=300  alt=""
            style="padding:10px;">
        </div>
        <%end%>
         <div class="mdl-card__title"
         style=" white-space: nowrap;
                overflow:hidden !important;
                text-overflow: ellipsis;">
            <h2 class="mdl-card__title-text"><%=feature.name%></h2>
        </div>
        <div class="mdl-card__supporting-text" style="height: 250px;">
          <div style="height: 30px; margin-top:10px">
                <p><span style="font-size: 1.1em; color:black;">Price: </span><span style="font-size: 1.3em; color:#ff5e33;">$<%=feature.price%></span></p>
            </div>
            <div style="height: 100px;">
                <p><span style="font-size: 1.1em; color:black">Description: </span><%=feature.description[0..100]%> ...</p>
            </div>
             <div style="height: 30px; margin-top:10px">
                <p><span style="font-size: 1.1em; color:black;">Category: </span>

                    <%if link_for_category%>
                        <a href="/category/<%=feature.category.id%>"><%=feature.category.title%>
                        </a>
                    <%else%>
                        <span><%=feature.category.title%></span>
                     <%end%>
                </p>
            </div>
            <div style="height: 30px; margin-top:10px">
                <p><span style="font-size: 1.1em; color:black;">Status: </span><%=feature.status.title%></p>
            </div>

        </div>
        <div class="mdl-card__actions" style="display: inline-block;">
        <%if link_for_details%>
            <a class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" href="/feature/<%=feature.id%>" style="clear:both; float:right ">Details</a>
        <%end%>
            <%# <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" style="background-color:#33ceff; float:right ">
                <i class="material-icons">
                    add_shopping_cart
                </i> Add To Cart
            </button> %>



        </div>
    </div>
</div>

