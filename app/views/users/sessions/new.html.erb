<div class="mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
 <%=render partial: 'navigation/nav'%>

<div class="mdl-grid">
  
  <div class="mdl-cell mdl-cell--12-col">
      <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"mdl-textfield__input"  %>
        <%= f.label :email, class:"mdl-textfield__label"   %>

      </div>
      <br/>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password, autocomplete: "current-password", class:"mdl-textfield__input" %>
        <%= f.label :password, class:"mdl-textfield__label"  %>
      </div>

      <div style="color:red">
           <%= flash[:alert]%>
      </div>
      <br/>
      <% if devise_mapping.rememberable? %>
        <div class="field ">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--4-col"></div>
      <div class="mdl-cell mdl-cell--4-col">
        <div class="actions">
          <%= f.submit "Log in", class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--accent" %>
        </div>
      </div>
     <div class="mdl-cell mdl-cell--4-col"></div>
    </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>

  </div>

  </div>

</div>